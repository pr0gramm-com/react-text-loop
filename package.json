{
  "name": "@pr0gramm/react-text-loop",
  "version": "0.1.2",
  "author": "pr0gramm.com developers <contact@pr0gramm.com>",
  "license": "MIT",
  "description": "Create an animated loop of a list of text for your headings",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "ci": "tsc --noEmit && biome ci ./src",
    "format": "biome format --write ./src",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm test && npm run format && npm run lint && npm run build",
    "test": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pr0gramm-com/react-text-loop.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "component",
    "text",
    "animation",
    "loop",
    "cycle",
    "react",
    "motion"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-motion": "^0.0.40",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "cxs": "^6.2.0",
    "react-motion": "^0.5.2"
  }
}
